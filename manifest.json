{
    "manifest_version": 2,

    "description": "Select table cells, rows and columns with Alt+mouse or from a context menu. Copy as rich text, HTML, tab-delimited and CSV.",

    "content_scripts": [
        {
            "js": ["src/content.js", "src/ascii-table.min.js"],
            "css": ["src/content.css"],
            "matches": [ "*://*/*", "file://*/*"],
            "all_frames": false
        }
    ],

    "background": {
        "page": "src/background.html",
        "persistent": true
    },

    "permissions": [
        "clipboardWrite",
        "contextMenus",
        "storage"
    ],

    "icons": {
        "16": "src/ico16.png",
        "48": "src/ico48.png",
        "128": "src/ico128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "src/ico19.png",
            "38": "src/ico38.png"
        },
        "default_title": "Copytables",
        "default_popup": "src/popup.html"
    },

    "name": "Copytables",
    "version": "0.4",
    "homepage_url": "http://merribithouse.net/copytables"
}
